% Macros for formatting abstract author name and (optional) affiliation.
% For organizations that don't have separate co-author data (e.g. CMS and
% CanaDAM) \absaffil could use ', #1', rather than ' (#1)'.
\newcommand{\absauthor}[1]{\textbf{#1}}
\newcommand{\absaffil}[1]{\ifthenelse{\equal{#1}{}}{}{ (#1)}}
% \abshead has two arguments
%   - author list (normally includes one or more uses of \absauthor and
%       \absaffil)
%   - abstract title
\newcommand{\abshead}[2]{\vspace{5pt plus 2pt minus 1.5pt}%
                           \smallbreak
                           \begin{tabular}[t]{@{\hspace{0pt}}p{505.8pt}@{}}
                           \rule{3.8cm}{0.2pt}\\%
                           #1 \\
                           \whenwhere\emph{#2} \end{tabular}%
                           \smallskip\par}

% Macro for placing two languages of abstract body side by side
\newcommand{\absSideBySide}[2]{%
\begin{Parallel}[c]{.44\textwidth}{.52\textwidth}
\ParallelLText{\noindent #1}
\ParallelRText{\noindent\protect\otherlanguage{francais}{#2}}
\end{Parallel}}

